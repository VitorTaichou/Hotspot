@model Hotspot.Models.CatalogTicket.CatalogTicketItemListViewModel

@{
    ViewData["Title"] = "Catálogo";
}


<h2>Catálogo de Tickets</h2>
<hr />
<div class="container">
    <div class="row mb-2">
        <a class="btn btn-success mr-1" asp-action="Add" asp-controller="CatalogTicketItem">Criar novo Item</a>
    </div>

    <!-- Possibloe addtion in the future
    <div class="row mb-2">
        <form class="form-inline" method="post">
            <input asp-for="Search" type="text" class="form-control mr-1" autofocus="autofocus" onFocus="this.select()" />
            <input type="submit" class="btn btn-primary text-light" value="Buscar" asp-action="Index" />
        </form>
    </div>
    -->

    <div class="row">
        <table class="table table-hover table-sm">
            <colgroup>
                <col />
                <col />
                <col />
                <col />
                <col />
                <col />
                <col />
            </colgroup>
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Tempo</th>
                    <th>Banda</th>
                    <th>Franquia</th>
                    <th>Validade (Dias)</th>
                    <th>Cor</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ItemsList)
                {
                    <tr>
                        <td><a asp-action="Edit" asp-route-id=@item.Id>@item.Description</a></td>
                        <td>@item.Time</td>
                        <td>@item.Bandwidth</td>
                        <td>@item.Franchise</td>
                        <td>@item.ExpireDays</td>
                        <td>@item.Color</td>
                        <td>@item.Value</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
