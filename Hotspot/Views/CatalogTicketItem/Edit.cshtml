@model Hotspot.Models.CatalogTicket.CatalogTicketItemViewModel

@{
    ViewData["Title"] = "Novo Item do Catálogo";
}

<h2>Novo Item do Catálogo</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descrição</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Time" class="control-label">Tempo</label>
                    <input asp-for="Time" type="time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bandwidth" class="control-label">Banda (em Megas)</label>
                    <input asp-for="Bandwidth" class="form-control" />
                    <span asp-validation-for="Bandwidth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Franchise" class="control-label">Franquia (em Megas)</label>
                    <input asp-for="Franchise" class="form-control" />
                    <span asp-validation-for="Franchise" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpireDays" class="control-label">Dias de Validade</label>
                    <input asp-for="ExpireDays" class="form-control" />
                    <span asp-validation-for="ExpireDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label">Cor do Ticket</label>
                    <input asp-for="Color" class="form-control" type="color" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Value" class="control-label">Valor</label>
                    <input asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>