@model Hotspot.Models.Account.AccountListViewModel;
@{
    ViewData["Title"] = "Usuários";
}

<h2>Lista de Usuários</h2>
<hr />

<div class="container">
    <div class="row">
        <!--Buttons-->
        <a asp-action="Register" class="btn btn-success mb-2">Adicionar</a>
    </div>
    <div class="row">
        <!--Table-->
        <table class="table table-hover table-sm">
            <colgroup>
                <col />
                <col />
            </colgroup>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.AccountList)
                {
                    if (account.Name != null && account.Id != null)
                    {
                        <tr>
                            <td><a asp-action="Edit" asp-route-id=@account.Id>@account.Name</a></td>
                            <td><a asp-action="Delete" asp-route-id=@account.Id>Deletar</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
