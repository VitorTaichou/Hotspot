@model Hotspot.Models.Courtesy.CourtesyAddViewModel;
@{
    ViewData["Title"] = "Adicionar Cortesia";
}

<div class="container">
    <div class="row mb-2">
        <h2>Cadastro de Cortesia</h2>
        <hr />
    </div>
    <form asp-action="Add">
        <div class="row">
            <div class="card card-body bg-light col mb-2">
                <div class="card-text">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nome</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label">Sobrenome</label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Descrição</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Cadastrar Cortesia" class="btn btn-success mr-1" />
            <a class="btn btn-secondary" asp-controller="Courtesy" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>