@model Hotspot.Models.Flow.FlowViewModel

@{
    ViewData["Title"] = "Adicionar Registro";
}

<h2>Adicionar Registro</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddFlow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label">Tipo de Registro</label>
                    <select asp-for="Type" class="form-control">
                        <option value="INFLOW">Entrada</option>
                        <option value="OUTFLOW">Saída</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label">Valor</label>
                    <input asp-for="Amount" type="text" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descrição</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label">Data do Registro</label>
                    <input asp-for="Date" class="form-control"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="CashFlowId" class="control-label" hidden></label>
                    <input asp-for="CashFlowId" class="form-control" hidden />
                    <span asp-validation-for="CashFlowId" class="text-danger" hidden></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar Registro" class="btn btn-success ml-1" />
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.CashFlowId">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

