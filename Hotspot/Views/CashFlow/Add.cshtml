@model Hotspot.Models.CashFlow.CashFlowViewModel

@{
    ViewData["Title"] = "Novo Caixa";
}

<h2>Criar novo Caixa</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocaleId" class="control-label">Localidade</label>
                    <select asp-for="LocaleId" class="form-control">
                        @if (ViewBag.Locales != null)
                        {
                            @foreach (var locale in ViewBag.Locales)
                            {
                                <option value="@locale.Id">@locale.City, @locale.State</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="LocaleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar Caixa" class="btn btn-success mr-1" />
                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

